
@{
    /**/

    ViewBag.Title = "Opcije";
}

@using FitnesCentarJovana.Models
<style>
    body {
        background-image: url("https://i.pinimg.com/originals/e6/4a/f1/e64af1fc0be4e520b40ee24ddebdc65b.jpg");
        background-size: cover;
    }

    h2.opcije {
        font-family: Broadway;
        font-size: 50px;
        color: #cc99ff
    }

    table.opcije {
        margin-right: auto;
        margin-left: auto;
        font-family: Broadway;
        color: azure;
        border-style: ridge;
        border-bottom-color: aliceblue;
        border-spacing: 12px;
    }

    tr.opcije {
        font-size: 180%;
    }

    td.submit {
        text-align: center;
    }

    input.submit {
        font-size: 90%;
        background-color: wheat;
    }

    input.opcije {
        font-size: 90%;
    }

    td {
        margin: 20px;
    }

        td.greska {
            color: #ff1a1a;
            font-weight: bold;
            font-size: 15px;
            background-color: white;
        }

    p {
        color: black;
        font-weight: bold;
        font-size: 20px;
        background-color: white;
    }

    a {
        font-size: 28px;
        color: aqua;
        opacity: 1.9;
    }

    div {
        margin: 3px;
    }
</style>

<h2 class="opcije">Opcije</h2>


@if (Session["KORISNIK"] != null)
{
    <a href="~/Prijavljivanje/OdjaviSe">Stranica za Odjavljivanje</a>
}

@if (Session["KORISNIK"] == null)
{

}
else if (((Korisnik)Session["KORISNIK"]).Uloga == ULOGE.VLASNIK)
{
    <div>
        <a href="~/Registracija/RegistracijaTrenera">Stranica za Registraciju Trenera</a>

    </div>
    <div>
        <a href="~/FitnesCentar/DodavanjeFitnesCentra">Stranica za Kreiranje Fitnes Centra</a>

    </div>
    <div>
        <a href="~/FitnesCentar/PrikazVlasnikovihFitnesCentara">Stranica za Prikaz Mojih Fitnes Centara</a>

    </div>
    <div>
        <a href="~/Registracija/Blokiranje">Stranica za Blokiranje Trenera</a>

    </div>
    <div>
        <a href="~/GrupniTrening/OpcijeKomentar">Stranica za Odobravanje/Odbijanje Komentara</a>

    </div>


}
else if (((Korisnik)Session["KORISNIK"]).Uloga == ULOGE.TRENER)
{
    <div>
        <a href="~/GrupniTrening/DodavanjeGrupnogTreninga">Stranica za Kreiranje Grupnog Treninga</a>

    </div>
    <div>
        <a href="~/GrupniTrening/PrikazTrenerovihGrupnihTreninga">Stranica za Prikaz Mojih Grupnih Treninga</a>

    </div>
    <div>
        <a href="~/GrupniTrening/PrikazTrenerovihGrupnihTreningaUProslosti">Stranica za Prikaz Mojih Grupnih Treninga Odrzanih u Proslosti</a>

    </div>
}
else
{
    <div>
        <a href="~/FitnesCentar/PrikazSvih">Stranica za Prikaz Svih Fitnes Centara</a>

    </div>
    <div>
        <a href="~/GrupniTrening/PrikazSvihRanijih">Stranica za Prikaz Ranijih Grupnih Treninga</a>

    </div>
}
<p>Neprijavljeni Opcije</p>
<div>
    <a href="~/FitnesCentar/PrikazSvih">Stranica za Prikaz Svih Fitnes Centara</a>

</div>
<div>
    <a href="~/Registracija/Index">Stranica za Registraciju</a>
</div>
<div>
    <a href="~/Prijavljivanje/Index">Stranica za Prijavu</a>

</div>